// 7.	Write a menu-driven C program using structure and dynamic memory allocation to add, display, delete records and free memory before exit.

#include <stdio.h>
#include <stdlib.h>

struct Student {
    int roll;
    char name[50];
    float marks;
};

int main() {
    struct Student *ptr = NULL;
    int n = 0, choice, i, roll, found;

    while (1) {
        printf("\n1. Add\n2. Display\n3. Delete\n4. Exit\n");
        printf("Enter choice: ");
        scanf("%d", &choice);

        if (choice == 1) {
            ptr = realloc(ptr, (n + 1) * sizeof(struct Student));

            printf("Enter Roll: ");
            scanf("%d", &ptr[n].roll);

            printf("Enter Name: ");
            scanf("%s", ptr[n].name);

            printf("Enter Marks: ");
            scanf("%f", &ptr[n].marks);

            n++;
            printf("Record Added\n");
        }

        else if (choice == 2) {
            for (i = 0; i < n; i++) {
                printf("\nRoll: %d", ptr[i].roll);
                printf("\nName: %s", ptr[i].name);
                printf("\nMarks: %.2f\n", ptr[i].marks);
            }
        }

        else if (choice == 3) {
            printf("Enter Roll to delete: ");
            scanf("%d", &roll);
            found = 0;

            for (i = 0; i < n; i++) {
                if (ptr[i].roll == roll) {
                    for (int j = i; j < n - 1; j++) {
                        ptr[j] = ptr[j + 1];
                    }
                    n--;
                    ptr = realloc(ptr, n * sizeof(struct Student));
                    found = 1;
                    printf("Record Deleted\n");
                    break;
                }
            }

            if (!found)
                printf("Record not found\n");
        }

        else if (choice == 4) {
            free(ptr);
            printf("Memory Freed. Exit.\n");
            break;
        }

        else {
            printf("Invalid choice\n");
        }
    }

    return 0;
}
